@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "All Employee";
}
<partial name="_Notification" />
<div class="container p-4">
    <div class="row">
        <div class="col-md-12">
            <h3 class="p-4">All Employees</h3>
        </div>
        <div class="row">
            <div class="col-md-12 p-4">
                <table class="table">
                   <thead>
                       <tr>
                           <th>#</th>
                           <th>Image</th>
                            <th>FirstName</th>
                            <th>LastName</th>
                            <th>DateOfBirth</th>
                            <th>Gender</th>
                            <th>Email</th>
                            <th>PhoneNumber</th>
                            <th>Address</th>
                            <th>Department</th>
                            
                            <th>IsActive</th>
                            <th>Edit</th>
                            <th>Delete</th>
                       </tr>
                   </thead>
                   <tbody>
                        @foreach(var employee in Model)
                        {
                            <tr>
                                
                                <td>@employee.EmployeeId</td>
                                <td> <img src="@employee.Image" alt="Employee Image" style="max-width: 50px; max-height: 50px;" /></td>
                                <td>@employee.FirstName</td>
                                <td>@employee.LastName</td>
                                <td>@employee.DateOfBirth</td>
                                <td>@employee.Gender</td>
                                <td>@employee.Email</td>
                                <td>@employee.PhoneNumber</td>
                                <td>@employee.Address</td>
                                
                                <td>@employee.Department.Name</td>
                                <td>@employee.IsActive</td>
                                <td><a class="btn" style="background-color:green;color:white" asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.EmployeeId" >Edit</a></td>
                                <td><a class="btn btn-danger" asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.EmployeeId" onclick="return confirm('Are you sure you want to delete this Employee?');">Delete</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
